pipeline {
    agent any
    environment {
        DOCKER_REGISTRY = "my-registry.com"
        DOCKER_IMAGE = "my-image"
    }
    stages {
        stage('Build Image') {
            when {
                anyOf {
                    branch 'main'
                    branch 'uat'
                    branch 'dev'
                }
            }
            steps {
                echo "Iniciando build da imagem..."
                sh 'docker build -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${BRANCH_NAME}-${BUILD_NUMBER} .'
                if (currentBuild.result == 'SUCCESS') {
                    echo "Build da imagem concluído com sucesso!"
                } else {
                    echo "Falha ao realizar build da imagem"
                }
            }
        }
        stage('Push Image') {
            when {
                anyOf {
                    branch 'main'
                    branch 'uat'
                    branch 'dev'
                }
            }
            steps {
                echo "Iniciando push da imagem..."
                withCredentials([usernamePassword(credentialsId: 'my-registry-credentials', usernameVariable: 'REGISTRY_USERNAME', passwordVariable: 'REGISTRY_PASSWORD')]) {
                    sh "docker login ${DOCKER_REGISTRY} -u ${REGISTRY_USERNAME} -p ${REGISTRY_PASSWORD}"
                    sh "docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${BRANCH_NAME}-${BUILD_NUMBER}"
                    if (currentBuild.result == 'SUCCESS') {
                        echo "Push da imagem concluído com sucesso!"
                    } else {
                        echo "Falha ao realizar push da imagem"
                    }
                }
            }
        }
    }
}
======================
pipeline {
    agent any
    environment {
        DOCKER_REGISTRY = "my-registry.com"
        DOCKER_IMAGE = "my-image"
    }
    options {
        allowUndeclaredVariables()
    }
    stages {
        stage('Build Image') {
            when {
                anyOf {
                    branch 'main'
                    branch 'uat'
                    branch 'dev'
                }
            }
            steps {
                echo "Starting Build Image stage"
                sh 'docker build -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${BRANCH_NAME}-${BUILD_NUMBER} .'
                currentBuild.result = 'SUCCESS'
            }
            post {
                always {
                    echo "Build Image stage finished with result: ${currentBuild.result}"
                }
            }
        }
        stage('Push Image') {
            when {
                anyOf {
                    branch 'main'
                    branch 'uat'
                    branch 'dev'
                }
            }
            steps {
                echo "Starting Push Image stage"
                withCredentials([usernamePassword(credentialsId: 'my-registry-credentials', usernameVariable: 'REGISTRY_USERNAME', passwordVariable: 'REGISTRY_PASSWORD')]) {
                    sh "docker login ${DOCKER_REGISTRY} -u ${REGISTRY_USERNAME} -p ${REGISTRY_PASSWORD}"
                    sh "docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${BRANCH_NAME}-${BUILD_NUMBER}"
                    currentBuild.result = 'SUCCESS'
                }
            }
            post {
                always {
                    echo "Push Image stage finished with result: ${currentBuild.result}"
                }
            }
        }
    }
}

======
pipeline {
    agent any
    environment {
        DOCKER_REGISTRY = "my-registry.com"
        DOCKER_IMAGE = "my-image"
    }
    stages {
        stage('Build Image') {
            when {
                anyOf {
                    branch 'main'
                    branch 'uat'
                    branch 'dev'
                }
            }
            steps {
                sh """
                    if [ \${BRANCH_NAME} = "main" ] || [ \${BRANCH_NAME} = "uat" ] || [ \${BRANCH_NAME} = "prod" ]; then
                        docker build -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${BRANCH_NAME}-latest -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${BRANCH_NAME}-${BUILD_NUMBER} .
                    else
                        docker build -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${BRANCH_NAME}-${BUILD_NUMBER} .
                    fi
                """
            }
        }
        stage('Push Image') {
            when {
                anyOf {
                    branch 'main'
                    branch 'uat'
                    branch 'dev'
                }
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'my-registry-credentials', usernameVariable: 'REGISTRY_USERNAME', passwordVariable: 'REGISTRY_PASSWORD')]) {
                    sh "docker login ${DOCKER_REGISTRY} -u ${REGISTRY_USERNAME} -p ${REGISTRY_PASSWORD}"
                    sh "docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${BRANCH_NAME}-latest"
                    sh "docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${BRANCH_NAME}-${BUILD_NUMBER}"
                }
            }
        }
    }
}
