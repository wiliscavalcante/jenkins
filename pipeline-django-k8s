pipeline {
    agent any

    environment {
        IMAGE_NAME = 'meu-app-django'
        DOCKER_REGISTRY = 'seu-registry-privado.com'
        DOCKER_TAG = "${GIT_COMMIT}"
        KUBECONFIG = credentials('kubeconfig')
    }

    stages {
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t ${DOCKER_REGISTRY}/${IMAGE_NAME}:${DOCKER_TAG} .'
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    dockerImage = "${DOCKER_REGISTRY}/${IMAGE_NAME}:${DOCKER_TAG}"
                    docker.withRegistry("${DOCKER_REGISTRY}", "docker-registry") {
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                withKubeConfig([credentialsId: 'kubeconfig']) {
                    sh "kubectl set image deployment/meu-app-django meu-app-django=${DOCKER_REGISTRY}/${IMAGE_NAME}:${DOCKER_TAG} --record"
                }
            }
        }
    }
}
